<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".edit.EditFatherProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Father Pofile "
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            />

    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_edit_profile_identity"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:hint="00000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            />



    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:id="@+id/card_edit_father_profile"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_edit_profile_firsttname"
                    android:hint="Noioua"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="30dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_edit_profile_lastname"
                    android:hint="adel"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="30dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edit_edit_profile_phone1"
                    android:hint="0699289437"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="30dp"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edit_edit_profile_phone2"
                    android:hint="0000 00 00 00"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="30dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_edit_profile_adresse"
                    android:hint="Rouiba Alger"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="30dp"
                    />
            </LinearLayout>








        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_edit_father_profile"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"

        android:background="@drawable/btn_gradient_style" />


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_from_edit_father"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_action_navigation_arrow_back" />


</RelativeLayout>