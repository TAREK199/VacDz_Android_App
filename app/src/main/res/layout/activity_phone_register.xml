<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.PhoneRegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_from_phone_register"
            android:layout_margin="20dp"
            android:src="@drawable/ic_keyboard_arrow_left_black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumber"
            android:hint="Numéro de telephone"
            android:inputType="phone"
            android:ems="10"
            android:drawableLeft="@drawable/ic_phone"
            android:background="@drawable/ic_edittextstyle"
            android:drawablePadding="20dp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="66dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex: +21369928****"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/sendCode"
            android:text="Envoyer Code"
            android:textColor="@color/white"
            android:background="@drawable/btn_gradient_style" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear_enter_code_phone_activity"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/code"
            android:hint="Code"
            android:drawableLeft="@drawable/ic_confirmation_number"
            android:background="@drawable/ic_edittextstyle"
            android:drawablePadding="20dp"
            android:inputType="number"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/verifyCode"
            android:text="Vérifier Code"
            android:textColor="@color/white"
            android:background="@drawable/btn_gradient_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        >


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resendCode"
            android:text="Renvoyer Code"
            android:textColor="@color/white"
            android:background="@drawable/btn_danger_style"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>