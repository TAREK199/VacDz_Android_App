<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".records.VaccinActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_vaccin"
        android:background="@color/blue"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_arrow_from_vaccin"
            android:background="@drawable/ic_keyboard_arrow_left_white" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_vaccin"
        android:layout_below="@+id/toolbar_vaccin"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vaccination_visit"
            android:text="Visite de Naissance"
            android:textSize="30dp"
            android:layout_gravity="center" />
    </LinearLayout>



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/toolbar2_vaccin"
        android:background="#C8399BEC"
        android:layout_below="@+id/toolbar_vaccin"
        android:layout_marginTop="80dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOZES"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_vaccin"
        android:layout_below="@+id/toolbar2_vaccin"
        android:layout_marginTop="40dp"
        />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vaccin_appointement"
        android:text="Selectionne Polyclinique"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_gradient_style" />


</RelativeLayout>