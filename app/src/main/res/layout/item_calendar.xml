<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="5dp"
    android:background="@color/blue_4"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_calendar_vaccination"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imgview_vaccination_state"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/button_disabled"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/blue"
                android:id="@+id/txt_calendar_vaccination_time_name"
                android:text="Naissance"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                 />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>